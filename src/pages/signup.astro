---
import Layout from '../layouts/Layout.astro';
import AuthForm from '../components/AuthForm.astro';

// Extract role from the query parameters
const url = new URL(Astro.url);
const role = url.searchParams.get('role');
---

<Layout title="Sign Up - NeuroEight">
  <div class="pt-16 pb-24 bg-neutral-50 dark:bg-neutral-900/30 min-h-screen">
    <div class="container-custom max-w-4xl">
      <div class="text-center mb-12">
        <h1 class="font-heading text-4xl md:text-5xl mb-4">Join NeuroEight</h1>
        <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-xl mx-auto">
          Create an account to find opportunities, collaborate on projects, and grow your professional network.
        </p>
      </div>
      
      <AuthForm mode="sign-up" redirectUrl="/profile" role={role} />
    </div>
  </div>
</Layout>