---
import Layout from '../layouts/Layout.astro'
import AuthForm from '../components/AuthForm.astro'
import ProjectCard from '../components/ProjectCard.astro'
import '../assets/styles/global.css'

// Featured Projects
const featuredProjects = [
  {
    id: 'project-1',
    title: 'E-commerce Website',
    description:
      'A modern e-commerce platform with payment integration and responsive design.',
    budget: 5000,
    clientName: 'John Doe',
    category: 'Web Development',
    skills: ['React', 'Node.js', 'Stripe', 'MongoDB'],
    deadline: '2025-06-15',
  },
  {
    id: 'project-2',
    title: 'Portfolio Website',
    description:
      'A sleek portfolio website for showcasing creative work with animations and galleries.',
    budget: 2000,
    clientName: 'Jane Smith',
    category: 'UI/UX Design',
    skills: ['Figma', 'HTML', 'CSS', 'JavaScript'],
    deadline: '2025-05-20',
  },
  {
    id: 'project-3',
    title: 'Mobile App Development',
    description:
      'A cross-platform app with real-time features, notifications, and social integration.',
    budget: 8000,
    clientName: 'Tech Innovations',
    category: 'Mobile Development',
    skills: ['React Native', 'Firebase', 'Redux', 'TypeScript'],
    deadline: '2025-07-30',
  },
]

// Stats
const stats = [
  { value: '10K+', label: 'Freelancers' },
  { value: '5K+', label: 'Businesses' },
  { value: '25K+', label: 'Projects Completed' },
  { value: '$15M+', label: 'Paid to Freelancers' },
]
---

<Layout title="NeuroEight | Connecting Talent with Opportunity">
  <!-- Hero Section -->
  <section class="section pt-32 pb-24 overflow-hidden relative">
    <div class="container-custom relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="max-w-2xl mx-auto lg:mx-0 text-center lg:text-left">
          <h1
            class="text-gradient font-heading mb-6 animate-slide-up opacity-0"
            style="animation-delay: 0.2s;"
          >
            <span class="block leading-tight">Connect, Collaborate,</span>
            <span class="block leading-tight"
              >Create <span class="relative">
                Amazing
                <svg
                  class="absolute w-full -bottom-2 left-0 h-3 text-primary-300 dark:text-primary-600"
                  viewBox="0 0 200 9"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M1 8C1 8 45.5 -2.5 99.5 3.5C153.5 9.5 199 2 199 2"
                    stroke="currentColor"
                    stroke-width="4"
                    stroke-linecap="round"></path>
                </svg>
              </span> Projects</span
            >
          </h1>
          <p
            class="text-lg md:text-xl mb-8 text-neutral-700 dark:text-neutral-300 max-w-xl mx-auto lg:mx-0 animate-slide-up opacity-0"
            style="animation-delay: 0.4s;"
          >
            NeuroEight brings together talented freelancers and innovative
            businesses for seamless collaboration on projects of all sizes.
          </p>
          <div
            class="flex flex-wrap gap-4 justify-center lg:justify-start animate-slide-up opacity-0"
            style="animation-delay: 0.6s;"
          >
            <a
              href="#features"
              class="btn-primary btn-lg group relative overflow-hidden"
            >
              <span class="relative z-10">Explore Features</span>
              <span
                class="absolute inset-0 bg-white/20 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"
              ></span>
            </a>
            <a
              href="#get-started"
              class="btn-outline btn-lg group relative overflow-hidden"
            >
              <span class="relative z-10">Get Started</span>
              <span
                class="absolute inset-0 bg-primary-500/10 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"
              ></span>
            </a>
          </div>

          <!-- Stats -->
          <div
            class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-6 lg:gap-8 text-center animate-fade-in opacity-0"
            style="animation-delay: 0.8s;"
          >
            {
              stats.map((stat, index) => (
                <div
                  class="bg-white dark:bg-neutral-800 rounded-xl p-4 shadow-soft transform hover:scale-105 transition-transform duration-300"
                  style={`animation-delay: ${0.9 + index * 0.1}s`}
                >
                  <div class="font-heading text-2xl md:text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500">
                    {stat.value}
                  </div>
                  <div class="text-sm text-neutral-600 dark:text-neutral-400">
                    {stat.label}
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <div class="hidden lg:block relative animate-float">
          <div
            class="absolute -inset-0.5 rounded-3xl bg-gradient-to-br from-primary-500 to-secondary-600 opacity-30 blur-xl animate-pulse"
          >
          </div>
          <img
            src="/hero-illustration.svg"
            alt="Collaboration Illustration"
            class="w-full max-w-lg mx-auto dark:opacity-90 drop-shadow-xl relative z-10"
            loading="eager"
          />

          <!-- Floating elements -->
          <div
            class="absolute top-12 -left-8 w-16 h-16 bg-white dark:bg-neutral-800 rounded-lg shadow-lg flex items-center justify-center animate-float"
            style="animation-delay: 0.2s; animation-duration: 6s;"
          >
            <svg
              class="w-8 h-8 text-primary-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"
              ></path>
            </svg>
          </div>

          <div
            class="absolute bottom-16 -right-8 w-16 h-16 bg-white dark:bg-neutral-800 rounded-lg shadow-lg flex items-center justify-center animate-float"
            style="animation-delay: 0.5s; animation-duration: 7s;"
          >
            <svg
              class="w-8 h-8 text-secondary-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
              ></path>
            </svg>
          </div>

          <div
            class="absolute top-1/2 -right-12 w-16 h-16 bg-white dark:bg-neutral-800 rounded-full shadow-lg flex items-center justify-center animate-float"
            style="animation-delay: 0.8s; animation-duration: 8s;"
          >
            <svg
              class="w-8 h-8 text-accent-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Animated background -->
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <!-- Gradient background effects -->
      <div
        class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-primary-200/30 dark:bg-primary-900/20 blur-3xl animate-pulse"
      >
      </div>
      <div
        class="absolute top-1/2 -left-24 w-64 h-64 rounded-full bg-accent-200/30 dark:bg-accent-900/20 blur-3xl animate-pulse"
        style="animation-delay: 1s;"
      >
      </div>
      <div
        class="absolute -bottom-32 right-12 w-80 h-80 rounded-full bg-secondary-200/30 dark:bg-secondary-900/20 blur-3xl animate-pulse"
        style="animation-delay: 2s;"
      >
      </div>

      <!-- Particle canvas for animated particles -->
      <div id="particles-js" class="absolute inset-0"></div>
    </div>

    <!-- Scroll indicator -->
    <div
      class="absolute bottom-6 left-1/2 transform -translate-x-1/2 flex flex-col items-center animate-bounce"
    >
      <span
        class="text-sm text-primary-600 dark:text-primary-400 mb-2 opacity-80"
        >Scroll to explore</span
