                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Feature 2 -->
        <div class="card card-hover">
          <div class="card-body">
            <div class="w-12 h-12 mb-4 rounded-full bg-secondary-100 dark:bg-secondary-900/30 flex items-center justify-center">
