---
import Layout from '../layouts/Layout.astro';
import AuthForm from '../components/AuthForm.astro';
import ProjectCard from '../components/ProjectCard.astro';
import '../assets/styles.css';

const featuredProjects = [
  {
    id: "project-1",
    title: 'E-commerce Website',
    description: 'A modern e-commerce platform with payment integration and responsive design.',
    budget: 5000,
    clientName: 'John Doe',
    category: 'Web Development',
    skills: ['React', 'Node.js', 'Stripe', 'MongoDB'],
    deadline: '2025-06-15'
  },
  {
    id: "project-2",
    title: 'Portfolio Website',
    description: 'A sleek portfolio website for showcasing creative work with animations and galleries.',
    budget: 2000,
    clientName: 'Jane Smith',
    category: 'UI/UX Design',
    skills: ['Figma', 'HTML', 'CSS', 'JavaScript'],
    deadline: '2025-05-20'
  },
  {
    id: "project-3",
    title: 'Mobile App Development',
    description: 'A cross-platform app with real-time features, notifications, and social integration.',
    budget: 8000,
    clientName: 'Tech Innovations',
    category: 'Mobile Development',
    skills: ['React Native', 'Firebase', 'Redux', 'TypeScript'],
    deadline: '2025-07-30'
  },
];

// Stats
const stats = [
  { value: '10K+', label: 'Freelancers' },
  { value: '5K+', label: 'Businesses' },
  { value: '25K+', label: 'Projects Completed' },
  { value: '$15M+', label: 'Paid to Freelancers' },
];
---

<Layout title="NeuroEight | Connecting Talent with Opportunity">
  <!-- Hero Section -->
  <section class="section pt-32 pb-24 overflow-hidden relative">
    <div class="container-custom relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="max-w-2xl mx-auto lg:mx-0 text-center lg:text-left">
          <h1 class="text-gradient font-heading mb-6">
            Connect, Collaborate, Create Amazing Projects
          </h1>
          <p class="text-lg md:text-xl mb-8 text-neutral-700 dark:text-neutral-300 max-w-xl mx-auto lg:mx-0">
            NeuroEight brings together talented freelancers and innovative businesses for seamless collaboration on projects of all sizes.
          </p>
          <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
            <a href="#features" class="btn-primary btn-lg">
              Explore Features
            </a>
            <a href="#get-started" class="btn-outline btn-lg">
              Get Started
            </a>
          </div>
          
          <!-- Stats -->
          <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-6 lg:gap-8 text-center">
            {stats.map(stat => (
              <div class="bg-white dark:bg-neutral-800 rounded-xl p-4 shadow-soft">
                <div class="font-heading text-2xl md:text-3xl font-bold text-primary-600 dark:text-primary-400">{stat.value}</div>
                <div class="text-sm text-neutral-600 dark:text-neutral-400">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="hidden lg:block relative">
          <img 
            src="/hero-illustration.svg" 
            alt="Collaboration Illustration" 
            class="w-full max-w-lg mx-auto dark:opacity-90 drop-shadow-xl"
            loading="eager"
          />
        </div>
      </div>
    </div>
    
    <!-- Background effects -->
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-primary-200/30 dark:bg-primary-900/20 blur-3xl"></div>
      <div class="absolute top-1/2 -left-24 w-64 h-64 rounded-full bg-accent-200/30 dark:bg-accent-900/20 blur-3xl"></div>
      <div class="absolute -bottom-32 right-12 w-80 h-80 rounded-full bg-secondary-200/30 dark:bg-secondary-900/20 blur-3xl"></div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="section bg-neutral-50 dark:bg-neutral-900/30">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="font-heading mb-4">Powerful Features for Modern Collaboration</h2>
        <p class="text-lg text-neutral-700 dark:text-neutral-300 max-w-xl mx-auto">
          Everything you need to find the right talent, manage projects effectively, and grow your business.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="card card-hover">
          <div class="card-body">
            <div class="w-12 h-12 mb-4 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
