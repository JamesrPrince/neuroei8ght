---
import Header from '../components/Header.astro';
import '../assets/styles.css';
import { DEFAULT_LANGUAGE, LANGUAGES } from '../i18n/config';
import { getUserPreferredLanguage, loadTranslations, getLanguageDirection } from '../i18n/utils';

// Define TypeScript interfaces for language data
interface LanguageInfo {
  code: string;
  name: string;
  locale: string;
  flag: string;
}

interface Languages {
  [key: string]: LanguageInfo;
}

// Get language from URL query param, from props, or use preferred/default
const urlLang = Astro.url.searchParams.get('lang');
const { lang: propsLang, title = 'NeuroEight | Connecting Talent with Opportunity' } = Astro.props;
const languageCode = urlLang || propsLang || getUserPreferredLanguage();

// Get language info (code, locale, etc.) - with type assertion
const typedLanguages = LANGUAGES as Languages;
const currentLang = typedLanguages[languageCode] || typedLanguages[DEFAULT_LANGUAGE];
const direction = getLanguageDirection(currentLang.code);

// Load translations for the selected language
const translations = await loadTranslations(currentLang.code);

// SEO metadata with defaults
const {
  metaDescription = "NeuroEight connects talented freelancers with businesses looking for expertise. Find your next project or hire skilled professionals today.",
  metaKeywords = "freelance, marketplace, remote work, hire developers, web design, programming, digital marketing",
  ogImage = "/og-image.jpg",
  canonicalUrl = Astro.url.pathname
} = Astro.props;
