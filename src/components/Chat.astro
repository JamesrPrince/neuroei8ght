interface Message {
  id: string;
  sender_id: string;
  receiver_id: string;
  message: string;
  timestamp: string;
}

let messages: Message[] = [];

async function fetchMessages() {
  const { data, error } = await supabase.from<Message>('messages').select('*').order('timestamp', { ascending: true });
  if (data) messages = data;
  if (error) console.error(error);
}

async function sendMessage(event: SubmitEvent) {
  event.preventDefault();
  const target = event.target as HTMLFormElement;
  const messageInput = target.message as HTMLInputElement;
  const newMessage = messageInput.value;

  const { error } = await supabase.from('messages').insert({
    sender_id: supabase.auth.getUser()?.id || '',
    receiver_id: 'receiver-id-placeholder', // Replace with actual receiver ID
    message: newMessage,
    timestamp: new Date().toISOString(),
  });

  if (error) console.error(error);
  messageInput.value = '';
  fetchMessages();
}

fetchMessages();
